  {{#each messages}}
<div class="alert alert-danger">{{this}}</div>
{{/each}}

<h1>List Product</h1>
<a href="/vendor/add_product" class="btn btn-primary">Add new product</a>
{{#if count}}

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Product</th>
      <th scope="col">Price</th>
      <th scope="col">Category</th>
      <th scope="col">Image</th>
      <th scope="col">Modify</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      {{#each this}}
      <tr>
      {{#if title}}
      <td>{{title}}</td>
      <td>{{price}}</td>
      <td>{{category}}</td>
      <td>
        {{#if image}}
        <img class="imgnotfound" src="{{image}}">
        
        {{else}}
        <img class="imgnotfound"src="https://lh4.ggpht.com/-PtwFBckvv78/V3aBB39xD9I/AAAAAAAAHFA/EXKKalIB8IkvyJjUzGrDVQCzLMs5Alx9QCLcB/s1600/anh-blogspot-khong-hien-thi.png" alt="">
        {{/if}}

      </td>
      <td><a href="/vendor/modify-product/{{this._id}}">Modify</a></td>
      <td><a class="confirmDeletion" href="/vendor/delete-product/{{this._id}}">Delete</a></td>
      {{/if}}
      </tr>
     {{/each}}
    
   
   {{/each}}
   
  </tbody>
</table>
{{else}}
 <h3 class="text-center">There are no product</h3>
{{/if}}
  

